<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_marooncompat</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Marooncompat</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Marooncompat</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Marooncompat</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Marooncompat</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_marooncompat</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_marooncompat</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Marooncompat</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Marooncompat.Widget</item>

    </style>

    <style name="ActionBar.Solid.Marooncompat" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_marooncompat</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_marooncompat</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_marooncompat</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Marooncompat</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Marooncompat.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Marooncompat</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Marooncompat</item>
    </style>

</resources>